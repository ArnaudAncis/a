<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>PVM Assignment</title>
    <%= default_externals %>
    <%= Html::Generation::Quiz.setup %>
    <style>
      #colours {
        margin-left: auto;
        margin-right: auto;
        width: 50%;
      }
      
      #colours td:first-child {
        color: #FFF;
        text-align: center;
      }

      #colours td {
        padding: 5px;
      }

      input {
        width: 100px;
      }

      input.correct {
        background: #AFA;
      }

      input.incorrect {
        background: #FAA
      }

      .solution {
        border: 1px solid black;
        padding: 10px;
        width: 25%;
        margin-left: auto;
        margin-right: auto;
        text-align: center;
      }
    </style>
  </head>

  <body>
    <header>
      <div class="center-vertically">Preprocessor</div>
    </header>
    <div id="contents">

      <%= interpret_exercise <<-END
            #include <iostream>
            #include <string>
            
            #define FOO
  
            int main()
            {
              #ifndef FOO
              int x = 10;
              #else
              std::string x = "qux";
              #endif
              
              std::cout << x << std::endl;

              return 0;
            }
          END
      %>

      <%= interpret_exercise <<-END
            #include <iostream>
            
            #define INIT 100
  
            int main()
            {
              std::cout << INIT << std::endl;
            }
          END
      %>

      <%= interpret_exercise(<<-END, input:'80 100' )
            #include <iostream>

            #define unless(x)              if (!(x))
            #define down_to(i, from, to)   for ( int i = from; i >= to; --i )

            int foo(int, int);

            int main()
            {
                std::cout << foo(80, 100);
                std::cin.get();
            }

            int foo(int a, int b)
            {
                down_to(i, a, 1)
                {
                    unless (a % i || b % i) return i;
                }
            }
            END
      %>

      <%= interpret_exercise(<<-END, input:'80 100' )
            #include <iostream>

            #define unless(x)              if (!x)
            #define down_to(i, from, to)   for ( int i = from; i >= to; --i )

            int foo(int, int);

            int main()
            {
                std::cout << foo(80, 100);
                std::cin.get();
            }

            int foo(int a, int b)
            {
                down_to(i, a, 1)
                {
                    unless (a % i || b % i) return i;
                }
            }
            END
      %>

    </div>
  </body>

  <script>
    Quiz.formatQuizzes();
  </script>
</html>
